# --- BLACK-PEARL LOGIC HUB ---
alias sbox-on='echo "Starting Azure Sandbox..." && bp sbox on'
alias sbox-off='echo "Stopping Azure Sandbox..." && bp sbox off'
alias sbox-status='echo "Checking Status..." && bp sbox status'

# BP Master Function
bp() {
    case "$1" in
        "sbox") echo "Sbox Command Executed: $2" ;;
        "sys")  echo "System Command Executed: $2" ;;
        *)      echo "Usage: bp [sbox|sys|cortex]" ;;
    esac
}
